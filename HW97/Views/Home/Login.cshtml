@model UserModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="card" style="max-width:400px;">
    <div class="card-header">
        ورود
    </div>
    <div class="card-body">
        <form asp-controller="Home" asp-action="Login" method="post">
            <div class="form-group">
                <label class="form-label" for="NationalCode">نام کاربری:</label>
                <Input class="form-control" asp-for="NationalCode">
            </div>
            <div class="form-group">
                <label class="form-label" for="CellPhone">رمز عبور:</label>
                <Input class="form-control" asp-for="CellPhone">
            </div>
            <div>
                <p> ثبت نام نکرده اید؟ <a asp-controller="Home" asp-action="RegisterUser">ثبت نام</a></p>
            </div>
            <div class="text-start">
                <button class="btn btn-success text-center" type="submit">ورود</button>
            </div>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger m-1" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
        </form>
    </div>
</div>

