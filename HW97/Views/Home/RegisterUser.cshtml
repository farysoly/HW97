@model UserModel
@{
    ViewData["Title"] = "register";
}
<div class="card" style="max-width:400px;">
    <div class="card-header">
        ثبت نام
    </div>
    <div class="card-body">
        <form asp-controller="Home" asp-action="RegisterUser" method="post">
            <div class="form-group">
                    <label class="form-label" for="FirstName">نام:</label>
                    <Input class="form-control" asp-for="FirstName">
            </div>
            <div class="form-group">
                    <label class="form-label" for="LastName">نام خانوادگی:</label>
                    <Input class="form-control" asp-for="LastName">
            </div>
            <div class="form-group">
                    <label class="form-label" for="CellPhone">شماره تماس:</label>
                    <Input class="form-control" asp-for="CellPhone">
            </div>
            <div class="form-group">
                    <label class="form-label" for="NationalCode">کد ملی:</label>
                    <Input class="form-control" asp-for="NationalCode">
            </div>
            <div class="text-start" style="margin-top : 20px">
                <button class="btn btn-success text-center" style="padding-left : 100px;text-align :center" type="submit">ثبت</button>
                <a class="btn btn-danger"  asp-controller="Home" asp-action="Login">خروج</a>
            </div>
        </form>
    </div>
</div>